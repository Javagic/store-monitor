# Server Configuration
PORT=3000
NODE_ENV=development

# Email Service Configuration (for notifications)
# Choose ONE of the following options:

# Option 1: Outlook/Hotmail (Easiest - no app passwords needed)
# EMAIL_SERVICE=hotmail
# EMAIL_USER=karcher.monitor.yourname@outlook.com
# EMAIL_PASS=your_regular_password

# Option 2: Gmail (Most reliable - requires app password)
# EMAIL_SERVICE=gmail
# EMAIL_USER=karcher.monitor.yourname@gmail.com
# EMAIL_PASS=your_16_character_app_password

# Option 3: Yahoo Mail (requires app password)
# EMAIL_SERVICE=yahoo
# EMAIL_USER=karcher.monitor.yourname@yahoo.com
# EMAIL_PASS=your_app_password

# Option 4: Custom SMTP (for any other provider)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# EMAIL_USER=your_email@yourdomain.com
# EMAIL_PASS=your_password

# Monitoring Configuration
CHECK_INTERVAL_MINUTES=5

# API Configuration
API_RATE_LIMIT=100
