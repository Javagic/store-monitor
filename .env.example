# Production Environment Configuration for Erix Clean Hub
# Copy this file to .env and configure with your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# OpenAI Configuration for AI Image Generation
# Get your API key from: https://platform.openai.com/api-keys
# REQUIRED for AI image generation features
OPENAI_API_KEY=your-openai-api-key-here

# Cleaning Service Configuration
COMPANY_NAME=Erix Clean
COMPANY_PHONE=+995 555 123 456
COMPANY_EMAIL=info@erixclean.ge
COMPANY_ADDRESS=Tbilisi, Georgia

# Monitoring Configuration
CHECK_INTERVAL_MINUTES=5
MAX_RETRIES=3
REQUEST_TIMEOUT=10000

# Security Configuration
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=*

# AI Image Generation Settings
AI_IMAGES_MAX_SIZE=1024x1024
AI_IMAGES_QUALITY=standard
AI_IMAGES_STYLE=natural

